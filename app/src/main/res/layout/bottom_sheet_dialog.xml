<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/idRLBSheet"
    android:background="@color/blue_shade2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Exercício"
        android:padding="4dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:id="@+id/idRVExerciseName"
        android:layout_margin="4dp"
        android:textSize="15sp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/idRVExerciseName"
        android:layout_margin="4dp"
        android:src="@mipmap/ic_launcher"
        android:padding="4dp"
        android:layout_centerVertical="true"
        android:id="@+id/idIVExercise"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descrição"
        android:id="@+id/idTVDescription"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/idIVExercise"
        android:layout_below="@id/idRVExerciseName"
        android:padding="3dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idRVExerciseName"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVExercise"
        android:padding="3dp"
        android:text="Preco do tutorial"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/idIVturorialPrice"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idIVExercise"
        android:weightSum="2">

        <Button
            android:id="@+id/idBtnEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="Editar Exercício"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/idBtnViewDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:text="Ver detalhes"
            android:textAllCaps="false"
            android:textColor="@color/white" />


    </LinearLayout>










</RelativeLayout>